<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>


<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="NEVER" alignment="CENTER_LEFT" hgap="20">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" maxWidth="30"/>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="200"/>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="200"/>
      <ColumnConstraints hgrow="ALWAYS" minWidth="10" prefWidth="300"/>
    </columnConstraints>

    <!--  List ID Number  -->
    <VBox spacing="0.5" alignment="CENTER_LEFT" GridPane.columnIndex="0">
      <padding><Insets left="10"/></padding>

      <Label fx:id="id" styleClass="cell_id">
        <minWidth>
          <!-- Ensures that the label text is never truncated -->
          <Region fx:constant="USE_PREF_SIZE" />
        </minWidth>
      </Label>
    </VBox>

    <!--  Name & Phone  -->
    <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="1" spacing="5">

      <Label fx:id="name" text="\$first" styleClass="cell_name" />

      <!--   Phone Icon and Number   -->
      <HBox alignment="CENTER_LEFT" spacing="10">
        <ImageView fx:id="phoneIcon" fitWidth="18" preserveRatio="true" visible="false">
          <image>
            <Image url="@/images/phone_icon.png"/>
          </image>
        </ImageView>

        <Label fx:id="phone" styleClass="cell_med_label" text="$phone" HBox.hgrow="ALWAYS"/>
      </HBox>

    </VBox>

    <!--  Email & Company  -->
    <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="2" spacing="15">
      <!--   Email Icon and Number   -->
      <HBox alignment="CENTER_LEFT" spacing="10">
        <ImageView fx:id="emailIcon" fitWidth="12" preserveRatio="true" visible="false">
          <image>
            <Image url="@/images/email_icon.png"/>
          </image>
        </ImageView>

        <Label fx:id="email" styleClass="cell_small_label" text="$email" HBox.hgrow="ALWAYS"/>
      </HBox>

      <!--   Company Icon and Number   -->
      <HBox alignment="CENTER_LEFT" spacing="10">
        <ImageView fx:id="companyIcon" fitWidth="12" preserveRatio="true" visible="false">
          <image>
            <Image url="@/images/company_icon.png"/>
          </image>
        </ImageView>

        <Label fx:id="company" styleClass="cell_small_label" text="\$company" />
      </HBox>


    </VBox>

    <VBox alignment="CENTER_RIGHT" minHeight="105" GridPane.columnIndex="3" GridPane.halignment="RIGHT">
      <padding><Insets right="2"/></padding>
      <FlowPane fx:id="tags" orientation="HORIZONTAL" alignment="TOP_RIGHT"/>
    </VBox>

  </GridPane>
</HBox>
